@model NoteApi__.NET_.DTO.UserLoginDto

@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center my-4">All Notes</h1> 

<form asp-action="Login" method="post" class="form-container">
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" required />
    </div>
    <button type="submit" class="btn btn-success btn-lg">Login</button> 
</form>

<div class="text-center mt-3">
    <p>Don't have an account? <a href="/Home/Register" class="btn btn-link">Register</a></p> 
</div>

<style>
    .form-container {
        background-color: white;
        border-radius: 10px;
        padding: 30px;
        width: 100%;
        max-width: 400px; 
        margin: 0 auto; 
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 30px; 
    }

    .form-group {
        margin-bottom: 15px;
        width: 100%;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        font-size: 1rem;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .btn {
        width: 100%;
        padding: 12px;
        font-size: 1rem;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-success {
        background-color: #66bb6a;
        border-color: #58a95b;
        color: white;
    }

        .btn-success:hover {
            background-color: #5a9e5c;
        }

    .btn-link {
        color: #4CAF50;
        text-decoration: none;
    }

        .btn-link:hover {
            color: #388e3c;
        }

    h1 {
        color: #4CAF50;
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 30px;
    }

</style>
