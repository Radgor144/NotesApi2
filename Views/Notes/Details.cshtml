@model NoteApi__.NET_.Entities.Note

<div class="container my-4">
    <h1 class="text-center">Note Details</h1>
    <dl class="row mt-4">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9 title-wrap">@Model.Title</dd>
        <dt class="col-sm-3">Content</dt>
        <dd class="col-sm-9 content-wrap">@Model.Content</dd>
        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Model.CreatedAt</dd>
    </dl>
    <div class="d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        font-size: 2rem;
        font-weight: bold;
        color: #4CAF50;
        text-align: center;
        margin-bottom: 30px;
    }

    .title-wrap, .content-wrap {
        white-space: normal;
        word-wrap: break-word;
        word-break: break-word;
        width: 100%;
    }

    .title-wrap {
        font-size: 1.2rem;
        color: #333;
        line-height: 1.4;
    }

    .content-wrap {
        font-size: 1rem;
        color: #555;
        line-height: 1.5;
    }

    textarea.form-control {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ddd;
        background-color: #f9f9f9;
        font-size: 1rem;
        resize: vertical;
    }

        textarea.form-control:focus {
            border-color: #66bb6a;
            box-shadow: 0 0 5px rgba(102, 187, 106, 0.5);
            outline: none;
        }

    .btn {
        text-decoration: none;
        font-size: 1rem;
        padding: 12px 24px;
        border-radius: 30px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #57c4b1;
        border-color: #4ba98b;
        color: white;
    }

        .btn-primary:hover {
            background-color: #48a595;
        }

    .btn-secondary {
        background-color: #c0c0c0;
        border-color: #b0b0b0;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #a8a8a8;
        }

    .btn-danger {
        background-color: #ff7043;
        border-color: #f44336;
        color: white;
    }

        .btn-danger:hover {
            background-color: #e64a19;
        }


    .d-flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .text-danger {
        color: #ff3547;
    }
</style>