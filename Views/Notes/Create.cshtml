@model NoteApi__.NET_.Entities.Note

<h1>Create Note</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" required />
    </div>
    <div class="form-group">
        <label for="Content">Content</label>
        <textarea class="form-control" id="Content" name="Content" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-action="Index" class="btn btn-link">Back to List</a>

<style>
    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        font-size: 2rem;
        font-weight: bold;
        color: #4CAF50;
        text-align: center;
        margin-bottom: 30px;
    }

    .title-wrap, .content-wrap {
        white-space: normal;
        word-wrap: break-word;
        word-break: break-word;
        width: 100%;
    }

    .title-wrap {
        font-size: 1.2rem;
        color: #333;
        line-height: 1.4;
    }

    .content-wrap {
        font-size: 1rem;
        color: #555;
        line-height: 1.5;
    }

    textarea.form-control {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ddd;
        background-color: #f9f9f9;
        font-size: 1rem;
        resize: vertical;
    }

        textarea.form-control:focus {
            border-color: #66bb6a;
            box-shadow: 0 0 5px rgba(102, 187, 106, 0.5);
            outline: none;
        }

    .btn {
        text-decoration: none;
        font-size: 1rem;
        padding: 12px 24px;
        border-radius: 30px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #57c4b1;
        border-color: #4ba98b;
        color: white;
    }

        .btn-primary:hover {
            background-color: #48a595;
        }

    .btn-secondary {
        background-color: #c0c0c0;
        border-color: #b0b0b0;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #a8a8a8;
        }

    .btn-danger {
        background-color: #ff7043;
        border-color: #f44336;
        color: white;
    }

        .btn-danger:hover {
            background-color: #e64a19;
        }


    .d-flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .text-danger {
        color: #ff3547;
    }
</style>
